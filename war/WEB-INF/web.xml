<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

<inherits name='com.google.web.bindery.event.EventBinder'/>

  <!-- Servlets -->
  <servlet>
    <servlet-name>opgaveServlet</servlet-name>
    <servlet-class>dtu.rejseafregning.server.dal.OpgaveDAO</servlet-class>
  </servlet> 
  <servlet-mapping>
    <servlet-name>opgaveServlet</servlet-name>
    <url-pattern>/__rejseafregning/opgaveservice</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>1_Rejseafregning.html</welcome-file>
  </welcome-file-list>

</web-app>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.northPanel {
		padding-right: 5px;
		background-color: #BDEDFF;
	}
	.westPanel {
		padding: 5px;
		background-color: #E5E4E2;
	}
	.centerPanel {
		margin: 5px;
		background-color: #FEFCFF;
	}
	</ui:style>
		<g:DockLayoutPanel unit="PX" width="100%" height="100%">
			<g:north size="50">
				<g:HorizontalPanel styleName="{style.northPanel}" width="100%" horizontalAlignment="ALIGN_RIGHT" height="100%" >
					<g:VerticalPanel width="100%" styleName="{style.northPanel}" horizontalAlignment="ALIGN_RIGHT">
						<g:Label text="Navn:" ui:field="navnLabel" width="100%" />
						<g:Label text="Afdeling:" ui:field="afdelingLabel" width="100%" />
					</g:VerticalPanel>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" width="5%">
						<g:Button ui:field="btnLogud" text="Log ud" ></g:Button>
					</g:Cell>
				</g:HorizontalPanel>
			</g:north>
			<g:center size="100">
				<g:DeckLayoutPanel ui:field="contentPanel" styleName="{style.centerPanel}"/>
			</g:center>
			<g:west size="140">
				<g:VerticalPanel  styleName="{style.westPanel}" width="100%" >
					<g:Anchor text="Velkommen" ui:field="velkommen" />
					<g:Anchor text="Mine opgaver"/>
					<g:Anchor text="Dokumentarkiv" ui:field="dokumentArkiv"/>
					<g:Anchor text="Rapporter" />
					<g:Anchor text="Mine oplysninger" ui:field="oplysninger" />
					<g:Anchor text="Indstillinger" />
					<g:Anchor text="Intranet link" />
					<g:Anchor text="HjÃ¦lp" />
				</g:VerticalPanel>
			</g:west>
		</g:DockLayoutPanel>
		
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
 <ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
 	xmlns:g="urn:import:com.google.gwt.user.client.ui">
 	<ui:style>
 	.loginPanel {
		margin: auto;
    	width: 20%;
    	border: 2px solid #666666;
    	padding: 10px;
 	}
  	</ui:style>
  	<g:VerticalPanel styleName="{style.loginPanel}" >
 		<g:HTML styleName="h2">DTU Rejseafregning</g:HTML>
 		<g:HTML />
 		<g:HorizontalPanel spacing="5" >
 			<g:Label text="Brugernavn: "/>
 			<g:TextBox ui:field="brugernavnTextBox"/>
 		</g:HorizontalPanel>
 		<g:HorizontalPanel spacing="5" >
 			<g:Label text="Adgangskode: "/>
 			<g:PasswordTextBox ui:field="adgangskodeTextBox"/>
 		</g:HorizontalPanel>
 		<g:Button ui:field="button">Login</g:Button>
  	</g:VerticalPanel>
  </ui:UiBinder>  
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>	
	<g:VerticalPanel styleName="loginPanel" horizontalAlignment="ALIGN_CENTER">
		<g:HTML styleName="h1">DTU Rejseafregning</g:HTML>
		<g:HorizontalPanel styleName="loginHPanel">
			<g:Label text="Brugernavn: "/>
			<g:TextBox ui:field="brugernavnTextBox"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName="loginHPanel">
			<g:Label text="Adgangskode: "/>
			<g:PasswordTextBox ui:field="adgangskodeTextBox"/>
		</g:HorizontalPanel>
		<g:Button ui:field="button">Login</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 
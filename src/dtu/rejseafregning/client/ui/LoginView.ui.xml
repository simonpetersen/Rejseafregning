<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
 <ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
 	xmlns:g="urn:import:com.google.gwt.user.client.ui">
 	<ui:style>
 	.loginPanel {
    	spacing: 5px;
 		margin: auto;
 		padding: 5px;
 		border: 2px solid #666666;
 		width: 20%;
 	}
 	.textBox {
    	spacing: 5px;
 		padding: 5px;
 	}
  	</ui:style>
  	<g:VerticalPanel styleName="{style.loginPanel}" horizontalAlignment="ALIGN_CENTER" >
 		<g:HTML styleName="h2">DTU Rejseafregning</g:HTML>
 		<g:HTML />
 		<g:Label text="Brugernavn:" />
 		<g:TextBox ui:field="brugernavnTextBox" width='96%' />
 		<g:Label text="Adgangskode: "/>
 		<g:PasswordTextBox ui:field="adgangskodeTextBox" width='96%' />
 		<g:HorizontalPanel width="100%">
 			<g:Button ui:field="login" width='100%'>Login</g:Button>
 			<g:Button ui:field="glemtButton" width='100%' >Glemt Adgangskode</g:Button>
 		</g:HorizontalPanel>
  	</g:VerticalPanel>
  </ui:UiBinder>  